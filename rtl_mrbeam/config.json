{
  "name": "RTL_MrBeam bridge",
  "version": "0.3",
  "slug": "rtlmrbeam",
  "description": "By using a DVB-T USB tuner, this plugin publishes state changes from MrBeam lights to state sensor.mrbeam",
  "url": "https://github.com/demute/hassio-addons/rtl_mrbeam",
  "startup": "before",
  "boot": "auto",
  "map": ["config:rw", "ssl"],
  "devices": ["/dev/bus/usb:/dev/bus/usb:rwm"],
  "host_network": "False",
  "homeassistant_api": "True",
  "arch": [
    "aarch64",
    "amd64",
    "armv7",
    "i386"
  ],
  "options":
  {
    "gain": 13
  },
  "schema":
  {
    "gain": "int"
  }
}
